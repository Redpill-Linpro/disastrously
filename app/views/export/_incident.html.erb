<%# Since we're exporting this I'm using inline stylesheets to make things look nice across the board ... %>

<% padding = 'padding-top: 1em; padding-bottom: 1em;' %>
<% border = 'border-top: 1px solid #868E8E;' %>
<% top = 'vertical-align: top;' %>
<% right_padding = 'padding-right: 1em' %>

<tr>
  <td <%= style(padding, top, border) %>><%= incident.title %></td>
  <td <%= style(padding, top, border) %>><%= incident.description.gsub("\n", "<br/>") %></td>
  <td <%= style(padding, top, border, right_padding) %>><%= incident.started_at %></td>
  <td <%= style(padding, top, border) %>><%= incident.ended_at %></td>
</tr>
